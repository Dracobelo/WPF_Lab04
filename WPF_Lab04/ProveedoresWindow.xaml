<Window x:Class="WPF_Lab04.ProveedoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proveedores" Height="420" Width="650">
    <StackPanel Margin="10">
        <TextBox x:Name="txtContacto" Width="200" Margin="0,0,0,5"/>
        <TextBox x:Name="txtCiudad" Width="200" Margin="0,0,0,5"/>
        <Button Content="Buscar" Width="100" Click="BtnBuscar_Click" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgProveedores" AutoGenerateColumns="True" Height="250"/>
    </StackPanel>
</Window>


