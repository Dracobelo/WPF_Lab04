<Window x:Class="WPF_Lab04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lab04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Botón para Productos -->
            <Button x:Name="btnProductos" Content="Ver Productos" Width="200" Height="40" Margin="7"
                        Click="btnProductos_Click"/>

                <!-- Botón para Proveedores -->
            <Button x:Name="btnProveedores" Content="Buscar Proveedores" Width="200" Height="40" Margin="7"
                        Click="btnProveedores_Click"/>

            <Button Content="Pedidos por Fechas" Width="200" Height="40" Margin="7" Click="btnPedidosFechas_Click"/>
            <Button Content="Crud Clientes" Width="200" Height="40" Margin="7" Click="btnClientes_Click"/>


        </StackPanel>
        </Grid>
</Window>
