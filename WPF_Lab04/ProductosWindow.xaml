<Window x:Class="WPF_Lab04.ProductosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lab04"
        mc:Ignorable="d"
        Title="ProductosWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <!-- Barra superior con botones -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Buscar Productos" Width="150" Margin="0,0,10,0" Click="BtnBuscar_Click"/>
            <Button Content="Ir a Proveedores" Width="150" Click="BtnIrProveedores_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgProductos" AutoGenerateColumns="True"/>
    </DockPanel>
</Window>
